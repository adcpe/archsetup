#!/usr/bin/env bash

echo -e "\nInstalling Desktop Environment\n"

PKGS=(
  'plasma'                  # minimal desktop environment

  # Desktop environment base programs
  'dolphin'                 # file explorer
  'ark'                     # (de)compression tool
  'gwenview'                # image viewer
  'kate'                    # text editor
  'okular'                  # document viewer
  'kcalc'                   # calculator
  'spectacle'               # screenshots
  'kcolorchooser'           # color chooser
  'qbittorrent'             # torrents
  'redshift'                # screen color temperature adjuster
  'vlc'                     # video player
  'cantata'                 # music player
  'starship'                # command prompt customization
  'kcron'
  'khelpcenter'
  'ksystemlog'
  'ktimer'
  'kfind'
  'kdialog'
  'openvpn'
  'networkmanager-openvpn'
  'kwallet-pam'
  'kwalletmanager'
  'gnome-keyring'
  'libsecret'

  # bluetooth & audio
  'bluez'
  'bluez-utils'
  'pipewire'
  'pipewire-alsa'
  'pipewire-pulse'
  'pipewire-jack'
  'wireplumber'
  'plasma-pa'
  'sof-firmware'
  'alsa-ucm-conf'

  # browsers
  'firefox'
  'chromium'

  # office suite
  'libreoffice-still'
  'hunspell-en_US'
  'hunspell-es_pe'
  'hyphen-en'
  'hyphen-es'
)

DEPS=(
  'mpd'                     # music player daemon
  'fwupd'
  'packagekit-qt5'
)

for PKG in "${PKGS[@]}"; do
  yay -S "$PKG" --noconfirm --needed
done

for DEP in "${DEPS[@]}"; do
  yay -S "$DEP" --noconfirm --needed --asdeps
done

sudo systemctl enable sddm.service
sudo systemctl enable bluetooth.service

echo -e "\nDONE!\n"
