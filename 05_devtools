#!/usr/bin/env bash

echo -e "\nInstalling devtools\n"

PKGS=(
  'postgresql'
  'mariadb'
  'dbeaver'
)

AURPKGS=(
  'vscodium-bin'
  'vscodium-bin-marketplace'
  'insomnia-bin'
)

DEPS=(
  'dbeaver-plugin-office'
)

for PKG in "${PKGS[@]}"; do
  sudo pacman -S "$PKG" --noconfirm --needed
done

for AURPKG in "${AURPKGS[@]}"; do
  yay -Sua "$AURPKG" --noconfirm --needed
done

for DEP in "${DEPS[@]}"; do
  yay -Sua "$DEP" --noconfirm --needed --asdeps
done

echo -e "\nDONE!\n"
